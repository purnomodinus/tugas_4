
<table class="table table-bordered table-hover">
<thead>
<tr>
<th>#</th>
<th>Title image</th>
<th>Content</th>
<th>Picture</th>
<th colspan="3">Manage</th>
</tr>
</thead>
<% i=1 %>
<% @users.each do |f| %>
<tbody>

<tr>
<td><%= i %></td>
<td><%= f.name %></td>
<td><%= f.content %></td>
<td><%= image_tag f.avatar.url(:preview), class: "img-rounded" %></td>
<td><%= link_to "Show", f, class: "label label-default" %></td>
<td><%= link_to 'Edit', edit_user_path(f.id), class: "label label-default" %></td>
<td><%= link_to 'Destroy', f, method: :delete, data: { confirm: 'Are you sure?' }, class: "label label-danger" %></td>
</tr>
</tbody>
<% i +=1 %>
<% end %>
</table>
<%= link_to 'New Image', new_user_path,class: 'btn btn-primary' %>